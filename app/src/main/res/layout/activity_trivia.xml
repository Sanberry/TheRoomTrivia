                android:layout_width="match_parent"
                android:layout_height="@dimen/margin" />
        </LinearLayout>
        <!--CheckBox Questions4 end -->
        <!--EditText answerQuestions5 start-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/QuestionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/QuestionNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_5" />

                <TextView
                    android:id="@+id/question5"
                    style="@style/Question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question5" />
            </LinearLayout>

            <View
                style="@style/Line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line" />

            <View
                style="@style/Line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:layout_marginTop="@dimen/radio_margin" />

            <pl.droidsonroids.gif.GifImageView
                style="@style/ImageAndGif"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                android:src="@drawable/anger" />

            <LinearLayout
                style="@style/QuestionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/written_answer"
                    style="@style/UserNameEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/type_the_answer_here"
                    android:inputType="textUri" />

            </LinearLayout>

            <Button
                style="@style/Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="submitAnswer5"
                android:text="@string/submit" />

            <View
                style="@style/Line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line" />

            <View
                style="@style/EndLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin" />
        </LinearLayout>
        <!--RadioButton Q6 start -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/QuestionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/QuestionNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/_6" />

                <TextView
                    android:id="@+id/question6"
                    style="@style/Question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/question6" />
            </LinearLayout>

            <View
                style="@style/Line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line" />

            <View
                style="@style/Line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line"
                android:layout_marginTop="@dimen/radio_margin" />

            <pl.droidsonroids.gif.GifImageView
                style="@style/ImageAndGif"
                android:layout_width="@dimen/image_width"
                android:layout_height="@dimen/image_height"
                android:src="@drawable/watching" />

            <RadioGroup
                style="@style/RadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButton13"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked" />

                <RadioButton
                    android:id="@+id/radioButton14"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked" />

                <RadioButton
                    android:id="@+id/radioButton15"
                    style="@style/RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRadioButtonClicked" />

                <RadioButton
                    android:id="@+id/radioButton16"
